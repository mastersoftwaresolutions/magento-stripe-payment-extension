<config>
    <modules>
        <Mss_Pay>
            <version>0.1.0</version>
        </Mss_Pay>
    </modules>
    <frontend>
        <routers>
            <pay>
                <use>standard</use>
                <args>
                    <module>Mss_Pay</module>
                    <frontName>pay</frontName>
                </args>
            </pay>
        </routers>
        <layout>
            <updates>
                <pay>
                    <file>pay.xml</file>
                </pay>
            </updates>
        </layout>
    </frontend>
    <global>
    	<fieldsets>
    		 <sales_convert_quote_payment>
    		 	<check_no>
    		 		<to_order_payment>*</to_order_payment>
    		 	</check_no>
    		 	<check_date>
    		 		<to_order_payment>*</to_order_payment>
    		 	</check_date>
    		 </sales_convert_quote_payment>
    	</fieldsets>
        <models>
            <pay>
                <class>Mss_Pay_Model</class>
                <resourceModel>pay_mysql4</resourceModel>
            </pay>
            <pay_mysql4>
                <class>Mss_Pay_Model_Mysql4</class>
                <entities>
                    <pay>
                        <table>pay</table>
                    </pay>
                </entities>
            </pay_mysql4>
        </models>
        <resources>
            <pay_setup>
                <setup>
                    <module>Mss_Pay</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </pay_setup>
            <pay_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </pay_write>
            <pay_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </pay_read>
        </resources>
        <blocks>
            <pay>
                <class>Mss_Pay_Block</class>
            </pay>
        </blocks>
        <helpers>
            <pay>
                <class>Mss_Pay_Helper</class>
            </pay>
        </helpers>
		   <events> 
		<checkout_onepage_controller_success_action>
		  <observers>
			 <mss_pay_observer>
				 <class>Mss_Pay_Model_Observer</class>
				 <method>invoicepay</method>
			</mss_pay_observer>
		 </observers>
		 </checkout_onepage_controller_success_action>
	 </events>   
    </global>
    <default>
        <payment>
            <pay>
                <active>1</active>
                <model>pay/pay</model>
                <order_status>pending</order_status>
                <title>Mss Payment Method</title>
                <message>Please enter your credit card information</message>
				<payment_action>authorize</payment_action>
            </pay>
         </payment>
    </default>
</config>